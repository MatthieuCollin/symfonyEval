{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block body %}
    <div class="products">
        {% for product in produits %}
            <a href={{path('app_product', { 'id': product.id }) }} class="card">
                <h3>{{product.nom}}</h3>
                <p>stock restant {{product.stock}}</p>
                <img src={{asset(product.image)}} alt={{product.nom}}>
                <p>{{product.description}}</p>
            </a>
        {% endfor %}
    </div>
{% endblock %}
